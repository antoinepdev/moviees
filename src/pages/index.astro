---
import Layout from '@/layouts/Layout.astro'
import Grid from '@/components/Grid.astro'
import { getCollection } from 'astro:content'

const metaTitle = "MovieEs"
const metaDesc = "Descarga películas en español completamente gratis desde Telegram"

const m = await getCollection("movies")
m.reverse()
const movies = m.slice(0, 10)
---

<Layout title={metaTitle} desc={metaDesc}>
  <main class="mt-secondary">
    <h1 class="text-title text-2xl font-bold mb-primary">Películas:</h1>
    <Grid movies={movies}/>
    <div class="flex justify-center items-center mt-secondary">
      <a href="/movies/all/2" class="rounded px-primary py-2 flex items-center justify-center bg-inherit border border-subtitle text-title hover:opacity-90">
        Ver lista completa
        <svg class="w-3.5 h-3.5 ms-2 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
          <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
        </svg>
      </a>
    </div>
  </main> 
</Layout>
